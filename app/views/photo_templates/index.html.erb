<h1>List of photos</h1>

<form action="/insert_photo_record">
  <div>
    <label for="image_field">Image</label>
    <input id="image_field" type="text" name="the_image">
  </div>
  <div>
    <label for="caption_field">Caption</label>
    <textarea id="caption_field" name="the_caption" placeholder="Enter a caption for the photo"></textarea>
  </div>
  <div>
    <label for="id_field">Owner ID</label>
    <input type="text" name="owner_id" id="id_field">
  </div>
  <button type="submit">Add photo</button>
</form>



<table border="1">
  <tr>
    <th>Image</th>
    <th>Caption</th>
    <th>Owner</th>
    <th>Posted</th>
    <th></th>
  </tr>
  <% @list_of_photos.each do |a_photo|%>
  <tr>
    <td>
      <img src="<%= a_photo.image %>" alt="">
    </td>
    <td><%= a_photo.caption %></td>
    <td><%= a_photo.poster.username %></td>
    <td><%= a_photo.created_at %></td>
    <td><a href="/photos/<%= a_photo.id %>">Show details</a></td>
  </tr>
  <% end %>
</table>
